
<div class="container">
    <div class="row">
        <div id="searchBox" class="col-lg-12 text-center textColor-6 shadyArea-1 roundedCorners-5">
            <h1 class="homePageHeader">Current location</h1>
            <p class="textSize-16 homePageSearchDivider">A demo showing how to get current location with Google Map APIs</p>
            <div class="input-group form-group-lg nestedGroup homePageSearchAreaTextBox">
                <span id="userLocatorButton" class="input-group-addon left-addon"><i class="fa fa-location-arrow fa-2x"></i></span>
                <input type="text" class="form-control" name="userPostcode" id="userPostcode" placeholder="Enter your postcode">
                <span class="input-group-btn">
                    <button class="btn btn-default btn-lg btn-lg-1" type="button">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
            <div id="map-canvas"></div>
        </div>
    </div>
</div>

@section scripts {

    <script type="text/javascript">

        $(document).ready(function () {

            "use strict";
            var userLocatorButtonSelector = "#userLocatorButton > i.fa";

            $("body").on("mouseover", userLocatorButtonSelector, CurrentLocation.prototype.setPlaceholderText);
            $("body").on("mouseout", userLocatorButtonSelector, CurrentLocation.prototype.resetPlaceholderText);
            $("body").on("click", userLocatorButtonSelector, CurrentLocation.prototype.getCurrentLocation);
        });

    </script>
}